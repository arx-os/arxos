# Backend API Environment Configuration

# Service Configuration
BACKEND_NAME=Arxos Backend API
BACKEND_VERSION=1.0.0
BACKEND_ENVIRONMENT=development
BACKEND_LOG_LEVEL=INFO

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=arxos
DB_USER=arxos_user
DB_PASSWORD=arxos_password
DB_SSL_MODE=require
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=1m

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=4000
API_TIMEOUT=60s
API_CORS_ORIGINS=*
API_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
API_CORS_HEADERS=Accept,Authorization,Content-Type,X-CSRF-Token

# Integration Configuration
GUS_API_URL=http://gus:9001
CAD_API_URL=http://cad:3000
ARXIDE_API_URL=http://arxide:8080

# Security Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h
BCRYPT_COST=12
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Performance Configuration
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30s
RESPONSE_TIMEOUT=60s
CACHE_TTL=3600s

# Development Configuration
DEBUG_MODE=true
HOT_RELOAD=true
DEV_MODE=true 