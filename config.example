# ArxOS Configuration Example
# Copy this to .env and update with your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=arxos
DB_PASSWORD=your_password_here
DB_NAME=arxos_dev
DB_SSLMODE=disable

# Or use full DATABASE_URL (overrides above)
# DATABASE_URL=postgres://arxos:password@localhost:5432/arxos_dev?sslmode=disable

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
LOG_LEVEL=info

# Application Configuration
ENVIRONMENT=development
APP_VERSION=0.1.0

# For production, use:
# ENVIRONMENT=production
# LOG_LEVEL=warn
# DB_SSLMODE=require

