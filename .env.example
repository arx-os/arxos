# ArxOS Environment Configuration Template
# Copy this to .env and customize for your deployment

# Server Configuration
ARXOS_PORT=8080
ARXOS_DB_PATH=/app/data/arxos.db
ARXOS_LOG_LEVEL=info

# Security Configuration
ARXOS_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
ARXOS_RATE_LIMIT_RPM=100
ARXOS_RATE_LIMIT_BURST=10

# SSL/TLS Configuration (for production)
TRAEFIK_EMAIL=your-email@example.com
DOMAIN_NAME=yourdomain.com

# Database Configuration
ARXOS_MAX_CONNECTIONS=25
ARXOS_MAX_IDLE_CONNECTIONS=5
ARXOS_CONNECTION_MAX_LIFETIME=5m

# Performance Tuning
ARXOS_READ_TIMEOUT=15s
ARXOS_WRITE_TIMEOUT=15s
ARXOS_IDLE_TIMEOUT=60s

# Development Options
GIN_MODE=release
ARXOS_ENABLE_METRICS=true
ARXOS_ENABLE_PROFILING=false

# Backup Configuration
BACKUP_INTERVAL=1h
BACKUP_RETENTION=30