{
  "test_scenarios": {
    "proximity_queries": [
      {
        "name": "conference_room_equipment",
        "description": "Find all equipment within 5m of conference room center",
        "center_point": {
          "x": 5000.0,
          "y": 3000.0,
          "z": 0.0,
          "unit": "mm"
        },
        "radius": 5000.0,
        "expected_equipment": [
          "VAV-101",
          "FS-101",
          "LIGHT-101-01",
          "TEMP-101"
        ],
        "expected_count": 4
      },
      {
        "name": "ceiling_equipment",
        "description": "Find equipment mounted above 2.5m height",
        "bounding_box": {
          "min": { "x": 0, "y": 0, "z": 2500 },
          "max": { "x": 50000, "y": 50000, "z": 10000 },
          "unit": "mm"
        },
        "expected_equipment": [
          "VAV-101",
          "FS-101",
          "LIGHT-101-01",
          "LIGHT-102-01"
        ],
        "expected_count": 4
      }
    ],
    "containment_queries": [
      {
        "name": "ground_floor_equipment",
        "description": "Equipment contained within ground floor",
        "floor_polygon": {
          "vertices": [
            { "x": 0, "y": 0, "z": 0 },
            { "x": 20000, "y": 0, "z": 0 },
            { "x": 20000, "y": 10000, "z": 0 },
            { "x": 0, "y": 10000, "z": 0 }
          ],
          "height_range": { "min": 0, "max": 3500 },
          "unit": "mm"
        },
        "expected_equipment": [
          "VAV-101",
          "SW-102A",
          "FS-101",
          "LIGHT-101-01",
          "WC-101",
          "TEMP-101"
        ],
        "expected_count": 6
      }
    ],
    "distance_calculations": [
      {
        "name": "hvac_to_sensor_distance",
        "description": "Distance between HVAC unit and temperature sensor",
        "equipment_a": "VAV-101",
        "equipment_b": "TEMP-101",
        "expected_distance": 2692.0,
        "tolerance": 10.0,
        "unit": "mm"
      },
      {
        "name": "cross_floor_distance",
        "description": "3D distance between ground floor and second floor equipment",
        "equipment_a": "SW-102A",
        "equipment_b": "RACK-201-01",
        "expected_distance": 4272.0,
        "tolerance": 50.0,
        "unit": "mm"
      }
    ],
    "clustering_analysis": [
      {
        "name": "hvac_cluster",
        "description": "HVAC and related equipment clustering",
        "cluster_radius": 3000.0,
        "seed_equipment": "VAV-101",
        "expected_cluster": [
          "VAV-101",
          "FS-101",
          "LIGHT-101-01",
          "TEMP-101"
        ],
        "cluster_type": "hvac_zone"
      }
    ],
    "spatial_validation": [
      {
        "name": "coordinate_precision",
        "description": "Validate millimeter-level coordinate precision",
        "test_points": [
          {
            "equipment": "VAV-101",
            "expected": { "x": 7500.0, "y": 4500.0, "z": 2700.0 },
            "tolerance": 1.0
          },
          {
            "equipment": "TEMP-101",
            "expected": { "x": 9000.0, "y": 5500.0, "z": 2200.0 },
            "tolerance": 1.0
          }
        ]
      },
      {
        "name": "floor_elevation_accuracy",
        "description": "Validate floor elevation calculations",
        "floors": [
          {
            "floor_id": "Ground Floor",
            "expected_elevation": 0.0,
            "equipment_count": 6
          },
          {
            "floor_id": "Second Floor",
            "expected_elevation": 3500.0,
            "equipment_count": 3
          }
        ]
      }
    ]
  },
  "performance_benchmarks": {
    "proximity_query_targets": {
      "radius_1m": { "max_time": "10ms", "accuracy": "100%" },
      "radius_10m": { "max_time": "50ms", "accuracy": "100%" },
      "radius_100m": { "max_time": "200ms", "accuracy": "99%" }
    },
    "batch_operations": {
      "insert_1000_positions": { "max_time": "1s" },
      "update_1000_positions": { "max_time": "800ms" },
      "query_1000_results": { "max_time": "500ms" }
    }
  },
  "regression_tests": {
    "coordinate_system_consistency": {
      "description": "Ensure coordinate transformations remain consistent",
      "reference_points": [
        { "local": [5000, 3000, 0], "expected_global": [37.7749, -122.4183, 0] }
      ]
    },
    "equipment_relationships": {
      "description": "Verify spatial relationships between equipment remain stable",
      "relationships": [
        {
          "type": "contains",
          "container": "Conference Room 101",
          "contained": ["VAV-101", "FS-101", "LIGHT-101-01", "TEMP-101"]
        }
      ]
    }
  }
}