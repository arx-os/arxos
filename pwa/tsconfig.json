{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "webxr",
      "vitest/globals",
      "@testing-library/jest-dom",
      "three"
    ],
    "baseUrl": ".",
    "paths": {
      "@arxos-wasm": ["../crates/arxos-wasm/pkg/arxos_wasm.js"]
    }
  },
  "include": ["src", "src/types"]
}

