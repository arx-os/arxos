{
  "mcp_id": "en-1992-1-1",
  "name": "Eurocode 2: Design of Concrete Structures - Part 1-1: General Rules and Rules for Buildings",
  "version": "2021",
  "jurisdiction": {
    "country": "EU",
    "region": "European Union",
    "authority": "CEN",
    "effective_date": "2021-01-01"
  },
  "description": "Eurocode 2 Part 1-1 provides general rules for the design of concrete structures including materials, durability, structural analysis, and design of structural members.",
  "rules": [
    {
      "rule_id": "EN1992-1-1-3.1.1",
      "name": "Concrete Strength Classes",
      "description": "Concrete shall be classified according to strength classes",
      "category": "structural_materials",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "concrete_element",
          "property": "strength_class",
          "operator": "in",
          "value": ["C12/15", "C16/20", "C20/25", "C25/30", "C28/35", "C30/37", "C32/40", "C35/45", "C40/50", "C45/55", "C50/60", "C55/67", "C60/75", "C70/85", "C80/95", "C90/105"]
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Concrete strength class must be specified according to EN 1992-1-1-3.1.1",
          "severity": "error",
          "code_reference": "EN 1992-1-1-3.1.1"
        }
      ]
    },
    {
      "rule_id": "EN1992-1-1-3.2.1",
      "name": "Reinforcement Properties",
      "description": "Reinforcement shall have specified yield strength and ductility",
      "category": "structural_materials",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "reinforcement",
          "property": "yield_strength",
          "operator": ">=",
          "value": 400
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Reinforcement must have minimum yield strength of 400 MPa per EN 1992-1-1-3.2.1",
          "severity": "error",
          "code_reference": "EN 1992-1-1-3.2.1"
        }
      ]
    },
    {
      "rule_id": "EN1992-1-1-4.1.1",
      "name": "Durability Requirements",
      "description": "Concrete structures shall be designed for specified exposure classes",
      "category": "durability",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "concrete_element",
          "property": "exposure_class",
          "operator": "!=",
          "value": "none"
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Concrete elements must have specified exposure class for durability per EN 1992-1-1-4.1.1",
          "severity": "error",
          "code_reference": "EN 1992-1-1-4.1.1"
        }
      ]
    },
    {
      "rule_id": "EN1992-1-1-5.1.1",
      "name": "Structural Analysis - Linear Elastic",
      "description": "Linear elastic analysis may be used for ULS and SLS",
      "category": "structural_analysis",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "structural_element",
          "property": "analysis_method",
          "operator": "in",
          "value": ["linear_elastic", "non_linear", "plastic"]
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Structural analysis method must be specified per EN 1992-1-1-5.1.1",
          "severity": "error",
          "code_reference": "EN 1992-1-1-5.1.1"
        }
      ]
    },
    {
      "rule_id": "EN1992-1-1-6.1.1",
      "name": "Ultimate Limit States - Bending",
      "description": "Reinforced concrete sections shall be verified for bending",
      "category": "structural_safety",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "concrete_element",
          "property": "bending_verification",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Concrete elements must be verified for bending per EN 1992-1-1-6.1.1",
          "severity": "error",
          "code_reference": "EN 1992-1-1-6.1.1"
        }
      ]
    },
    {
      "rule_id": "EN1992-1-1-6.2.1",
      "name": "Ultimate Limit States - Shear",
      "description": "Reinforced concrete sections shall be verified for shear",
      "category": "structural_safety",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "concrete_element",
          "property": "shear_verification",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Concrete elements must be verified for shear per EN 1992-1-1-6.2.1",
          "severity": "error",
          "code_reference": "EN 1992-1-1-6.2.1"
        }
      ]
    },
    {
      "rule_id": "EN1992-1-1-7.1.1",
      "name": "Serviceability Limit States - Deflection",
      "description": "Deflection limits shall be checked for serviceability",
      "category": "serviceability",
      "severity": "warning",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "concrete_element",
          "property": "deflection_checked",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Deflection limits should be checked for serviceability per EN 1992-1-1-7.1.1",
          "severity": "warning",
          "code_reference": "EN 1992-1-1-7.1.1"
        }
      ]
    },
    {
      "rule_id": "EN1992-1-1-8.1.1",
      "name": "Detailing - Minimum Cover",
      "description": "Minimum concrete cover shall be provided for durability",
      "category": "structural_materials",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "concrete_element",
          "property": "minimum_cover",
          "operator": ">=",
          "value": 15
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Minimum concrete cover of 15mm must be provided per EN 1992-1-1-8.1.1",
          "severity": "error",
          "code_reference": "EN 1992-1-1-8.1.1"
        }
      ]
    },
    {
      "rule_id": "EN1992-1-1-9.1.1",
      "name": "Detailing - Minimum Reinforcement",
      "description": "Minimum reinforcement shall be provided in concrete sections",
      "category": "structural_materials",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "concrete_element",
          "property": "minimum_reinforcement",
          "operator": ">=",
          "value": 0.001
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Minimum reinforcement ratio of 0.1% must be provided per EN 1992-1-1-9.1.1",
          "severity": "error",
          "code_reference": "EN 1992-1-1-9.1.1"
        }
      ]
    },
    {
      "rule_id": "EN1992-1-1-10.1.1",
      "name": "Detailing - Anchorage and Lapping",
      "description": "Reinforcement shall be properly anchored and lapped",
      "category": "structural_materials",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "reinforcement",
          "property": "anchorage_length",
          "operator": ">=",
          "value": 20
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Reinforcement must have adequate anchorage length per EN 1992-1-1-10.1.1",
          "severity": "error",
          "code_reference": "EN 1992-1-1-10.1.1"
        }
      ]
    }
  ]
} 