# Arxos Production Environment Configuration

# Database Configuration
POSTGRES_DB=arxos_prod
POSTGRES_USER=arxos_user
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRATION=3600

# Service Configuration
ENVIRONMENT=production
LOG_LEVEL=info
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
CORS_ORIGINS=https://yourapp.com,https://www.yourapp.com

# SVGX Engine Configuration
SVGX_HOST=0.0.0.0
SVGX_PORT=8081
SVGX_WORKERS=2

# Python API Configuration
PYTHON_API_HOST=0.0.0.0
PYTHON_API_PORT=8082
PYTHON_API_WORKERS=4

# GUS Agent Configuration
GUS_HOST=0.0.0.0
GUS_PORT=8083
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Monitoring Configuration
GRAFANA_PASSWORD=secure_grafana_password

# File Upload Limits
MAX_UPLOAD_SIZE=100MB
UPLOAD_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=20

# Security Configuration
ALLOWED_HOSTS=yourapp.com,www.yourapp.com,localhost
SSL_ENABLED=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_SYMBOL_RECOGNITION=true
ENABLE_PDF_INGESTION=true
ENABLE_LIDAR_CAPTURE=true
ENABLE_AI_FEATURES=true
ENABLE_REALTIME_UPDATES=true