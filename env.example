# ArxOS Environment Configuration
# Copy this file to .env and modify values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostGIS Database Configuration
POSTGIS_HOST=localhost
POSTGIS_PORT=5432
POSTGIS_DB=arxos
POSTGIS_USER=arxos
POSTGIS_PASSWORD=your_secure_password_here
POSTGIS_SSLMODE=disable


# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Logging
ARX_LOG_LEVEL=info
ARX_LOG_FORMAT=json
ARX_LOG_OUTPUT=stdout

# Data Directories
ARX_STATE_DIR=./data
ARX_CACHE_DIR=./cache
ARX_TEMP_DIR=./temp

# Application Settings
ARX_DEBUG=false
ARX_HOT_RELOAD=false
ARX_MAX_WORKERS=4

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================

# Server Settings
API_HOST=0.0.0.0
API_PORT=8080
API_READ_TIMEOUT=30s
API_WRITE_TIMEOUT=30s
API_IDLE_TIMEOUT=120s

# CORS Settings
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=1h

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# Encryption
ENCRYPTION_KEY=your_encryption_key_here_change_this_in_production

# Session Configuration
SESSION_SECRET=your_session_secret_here_change_this_in_production
SESSION_MAX_AGE=86400

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Local Storage
LOCAL_STORAGE_PATH=./storage

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
AWS_S3_BUCKET=arxos-storage

# Google Cloud Storage (optional)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_BUCKET=arxos-storage
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Azure Blob Storage (optional)
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_STORAGE_CONTAINER=arxos-storage

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PUSHGATEWAY_URL=

# Health Check
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=ArxOS <noreply@arxos.com>

# Webhook Configuration
WEBHOOK_URL=
WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Settings
DEV_MODE=false
DEV_HOT_RELOAD=false
DEV_DEBUG_PORT=2345

# Test Configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=arxos_test
TEST_DB_USER=arxos
TEST_DB_PASSWORD=test_password

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production Settings
PROD_MODE=false
PROD_HTTPS_ONLY=true
PROD_SECURE_HEADERS=true

# Load Balancer
LB_BEHIND_PROXY=false
LB_TRUSTED_PROXIES=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
FEATURE_HARDWARE_PLATFORM=true
FEATURE_WORKFLOW_AUTOMATION=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_AI_ML=false
FEATURE_DIGITAL_TWIN=false

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================

# n8n Integration
N8N_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key

# External APIs
EXTERNAL_API_TIMEOUT=30s
EXTERNAL_API_RETRIES=3

# =============================================================================
# SPATIAL CONFIGURATION
# =============================================================================

# Coordinate System
DEFAULT_COORDINATE_SYSTEM=TOP_LEFT_ORIGIN
DEFAULT_UNIT_SYSTEM=METERS

# Spatial Indexing
SPATIAL_INDEX_ENABLED=true
SPATIAL_INDEX_RESOLUTION=1.0

# =============================================================================
# WORKFLOW CONFIGURATION
# =============================================================================

# Workflow Engine
WORKFLOW_ENGINE_ENABLED=true
WORKFLOW_MAX_CONCURRENT=10
WORKFLOW_TIMEOUT=300s

# CMMS Integration
CMMS_ENABLED=false
CMMS_API_URL=
CMMS_API_KEY=

# =============================================================================
# HARDWARE CONFIGURATION
# =============================================================================

# Hardware Platform
HARDWARE_PLATFORM_ENABLED=true
HARDWARE_GATEWAY_URL=http://localhost:8081
HARDWARE_PROTOCOL_TIMEOUT=30s

# IoT Device Management
IOT_DEVICE_TIMEOUT=60s
IOT_DEVICE_RETRIES=3
IOT_DEVICE_BATCH_SIZE=100

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================

# Analytics Engine
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_FLUSH_INTERVAL=60s

# Energy Optimization
ENERGY_OPTIMIZATION_ENABLED=false
ENERGY_OPTIMIZATION_INTERVAL=300s

# Predictive Maintenance
PREDICTIVE_MAINTENANCE_ENABLED=false
PREDICTIVE_MAINTENANCE_MODEL_PATH=./models/

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# =============================================================================
# MIGRATION CONFIGURATION
# =============================================================================

# Database Migration
MIGRATION_AUTO_RUN=true
MIGRATION_BACKUP_BEFORE=true
MIGRATION_ROLLBACK_ON_ERROR=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Connection Pooling
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=1h

# Query Optimization
QUERY_TIMEOUT=30s
QUERY_CACHE_TTL=300s
QUERY_CACHE_SIZE=1000

# =============================================================================
# SECURITY HEADERS
# =============================================================================

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_POLICY="default-src 'self'"
HSTS_MAX_AGE=31536000
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Custom Environment Variables
# Add any custom environment variables here
# CUSTOM_VAR_1=value1
# CUSTOM_VAR_2=value2
