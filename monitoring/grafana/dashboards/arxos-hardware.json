{
  "dashboard": {
    "id": null,
    "title": "ArxOS Hardware Platform",
    "tags": ["arxos", "hardware", "iot"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Device Status",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(device_status{status=\"online\"})",
            "legendFormat": "Online Devices"
          },
          {
            "expr": "sum(device_status{status=\"offline\"})",
            "legendFormat": "Offline Devices"
          },
          {
            "expr": "sum(device_status{status=\"error\"})",
            "legendFormat": "Error Devices"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "green",
                  "value": 10
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Gateway Status",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(gateway_status{status=\"online\"})",
            "legendFormat": "Online Gateways"
          },
          {
            "expr": "sum(gateway_status{status=\"offline\"})",
            "legendFormat": "Offline Gateways"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Device Types",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (device_type) (device_status)",
            "legendFormat": "{{device_type}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Message Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(device_messages_total[5m])",
            "legendFormat": "Messages/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Messages/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Protocol Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(protocol_messages_total[5m])",
            "legendFormat": "{{protocol}}"
          }
        ],
        "yAxes": [
          {
            "label": "Messages/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Device Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(device_response_time_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(device_response_time_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Gateway Load",
        "type": "graph",
        "targets": [
          {
            "expr": "gateway_cpu_usage",
            "legendFormat": "CPU Usage"
          },
          {
            "expr": "gateway_memory_usage",
            "legendFormat": "Memory Usage"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Device Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(device_errors_total[5m])",
            "legendFormat": "Errors/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 9,
        "title": "Certification Status",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(certified_devices_total)",
            "legendFormat": "Certified Devices"
          },
          {
            "expr": "sum(pending_certifications_total)",
            "legendFormat": "Pending Certifications"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}
