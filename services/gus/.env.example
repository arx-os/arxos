# Gus AI Service Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME="Gus AI Service"
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=*

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY_HEADER=X-API-Key
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Database
DATABASE_URL=postgresql://arxos:arxos@localhost:5432/arxos_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# LLM Configuration
# Options: openai, anthropic, azure_openai, local
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your-openai-api-key

# Anthropic Configuration (if using Anthropic)
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Azure OpenAI Configuration (if using Azure)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_KEY=your-azure-key

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TOP_P=1.0
LLM_FREQUENCY_PENALTY=0.0
LLM_PRESENCE_PENALTY=0.0
LLM_TIMEOUT=30
LLM_RETRY_COUNT=3

# Vector Database
VECTOR_DB_PROVIDER=chroma
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=arxos_knowledge

# Pinecone Configuration (if using Pinecone)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=your-pinecone-environment
# PINECONE_INDEX=arxos-knowledge

# Knowledge Base
KNOWLEDGE_BASE_PATH=./knowledge
KNOWLEDGE_CHUNK_SIZE=1000
KNOWLEDGE_CHUNK_OVERLAP=200

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_BURST=10

# Conversation Management
CONVERSATION_MAX_MESSAGES=50
CONVERSATION_TTL_HOURS=24
CONVERSATION_MAX_TOKENS=4000

# ArxObject Integration
ARXOBJECT_API_URL=http://localhost:8080
ARXOBJECT_API_KEY=

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false
TRACING_ENDPOINT=

# Feature Flags
ENABLE_STREAMING=true
ENABLE_FUNCTION_CALLING=true
ENABLE_KNOWLEDGE_BASE=true
ENABLE_QUERY_TRANSLATION=true
ENABLE_ANALYTICS=true