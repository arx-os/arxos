{
  "name": "svgx-engine",
  "displayName": "SVGX Engine",
  "description": "SVGX Engine support for VS Code with syntax highlighting, IntelliSense, live preview, and debugging",
  "version": "1.0.0",
  "publisher": "svgx-engine",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "svgx",
    "cad",
    "infrastructure",
    "simulation",
    "spatial"
  ],
  "activationEvents": [
    "onLanguage:svgx",
    "onCommand:svgx.preview",
    "onCommand:svgx.validate",
    "onCommand:svgx.debug",
    "onCommand:svgx.simulate"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "svgx",
        "aliases": [
          "SVGX",
          "svgx"
        ],
        "extensions": [
          ".svgx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "svgx",
        "scopeName": "source.svgx",
        "path": "./syntaxes/svgx.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "svgx",
        "path": "./snippets/svgx.json"
      }
    ],
    "commands": [
      {
        "command": "svgx.preview",
        "title": "SVGX: Open Preview",
        "category": "SVGX"
      },
      {
        "command": "svgx.validate",
        "title": "SVGX: Validate File",
        "category": "SVGX"
      },
      {
        "command": "svgx.debug",
        "title": "SVGX: Debug Simulation",
        "category": "SVGX"
      },
      {
        "command": "svgx.simulate",
        "title": "SVGX: Run Simulation",
        "category": "SVGX"
      },
      {
        "command": "svgx.compile",
        "title": "SVGX: Compile to SVG",
        "category": "SVGX"
      },
      {
        "command": "svgx.compile.json",
        "title": "SVGX: Compile to JSON",
        "category": "SVGX"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "svgx.preview",
          "when": "resourceExtname == .svgx"
        },
        {
          "command": "svgx.validate",
          "when": "resourceExtname == .svgx"
        },
        {
          "command": "svgx.debug",
          "when": "resourceExtname == .svgx"
        },
        {
          "command": "svgx.simulate",
          "when": "resourceExtname == .svgx"
        },
        {
          "command": "svgx.compile",
          "when": "resourceExtname == .svgx"
        },
        {
          "command": "svgx.compile.json",
          "when": "resourceExtname == .svgx"
        }
      ],
      "editor/context": [
        {
          "command": "svgx.preview",
          "when": "resourceExtname == .svgx",
          "group": "1_modification"
        },
        {
          "command": "svgx.validate",
          "when": "resourceExtname == .svgx",
          "group": "1_modification"
        },
        {
          "command": "svgx.debug",
          "when": "resourceExtname == .svgx",
          "group": "1_modification"
        },
        {
          "command": "svgx.simulate",
          "when": "resourceExtname == .svgx",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "SVGX Engine",
      "properties": {
        "svgx.preview.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable live preview for SVGX files"
        },
        "svgx.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time validation for SVGX files"
        },
        "svgx.debugging.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable debugging support for SVGX simulations"
        },
        "svgx.server.url": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "SVGX Engine server URL"
        },
        "svgx.server.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for SVGX Engine server"
        },
        "svgx.performance.targetResponseTime": {
          "type": "number",
          "default": 16,
          "description": "Target response time in milliseconds for interactions"
        },
        "svgx.simulation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable simulation capabilities"
        },
        "svgx.simulation.types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["structural", "fluid_dynamics", "heat_transfer", "electrical", "rf_propagation"]
          },
          "default": ["structural", "electrical"],
          "description": "Enabled simulation types"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "svgx-explorer",
          "title": "SVGX Engine",
          "icon": "resources/svgx-icon.svg"
        }
      ]
    },
    "views": {
      "svgx-explorer": [
        {
          "id": "svgx-simulations",
          "name": "Simulations",
          "when": "resourceExtname == .svgx"
        },
        {
          "id": "svgx-elements",
          "name": "Elements",
          "when": "resourceExtname == .svgx"
        },
        {
          "id": "svgx-constraints",
          "name": "Constraints",
          "when": "resourceExtname == .svgx"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "svgx-simulations",
        "contents": "No SVGX file open.\n[Open SVGX File](command:workbench.action.openWith)"
      },
      {
        "view": "svgx-elements",
        "contents": "No SVGX file open.\n[Open SVGX File](command:workbench.action.openWith)"
      },
      {
        "view": "svgx-constraints",
        "contents": "No SVGX file open.\n[Open SVGX File](command:workbench.action.openWith)"
      }
    ],
    "problemMatchers": [
      {
        "name": "svgx-validator",
        "owner": "svgx",
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ]
      }
    ],
    "taskDefinitions": [
      {
        "type": "svgx",
        "required": ["file"],
        "properties": {
          "file": {
            "type": "string",
            "description": "SVGX file to process"
          },
          "operation": {
            "type": "string",
            "enum": ["validate", "simulate", "compile", "debug"],
            "description": "Operation to perform"
          },
          "simulationType": {
            "type": "string",
            "enum": ["structural", "fluid_dynamics", "heat_transfer", "electrical", "rf_propagation"],
            "description": "Type of simulation to run"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "echo 'JavaScript extension ready'",
    "test": "echo 'No tests configured for JavaScript version'"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "ws": "^8.13.0"
  }
} 