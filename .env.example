# Arxos Platform - Secure Configuration Template
# Copy this file to .env and update with your secure values
# NEVER commit the actual .env file to version control

# ============================================================================
# CRITICAL SECURITY SETTINGS - MUST BE SET BEFORE PRODUCTION
# ============================================================================

# Admin Credentials (REQUIRED - no defaults for security)
# Generate secure password: openssl rand -base64 20
ARXOS_ADMIN_USERNAME=
ARXOS_ADMIN_PASSWORD=

# JWT Secret (REQUIRED - generate with: openssl rand -base64 32)
JWT_SECRET=
JWT_EXPIRATION=3600  # 1 hour in seconds
# Alternative: Store JWT secret in a file
# JWT_SECRET_FILE=/etc/arxos/jwt.key

# CORS Allowed Origins (comma-separated list)
# CRITICAL: Change from * to specific domains in production!
# Example: https://app.yourdomain.com,https://admin.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Environment (development/staging/production)
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=false

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Settings
POSTGRES_DB=arxos
POSTGRES_USER=arxos
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DB_SSL_MODE=disable  # Use 'require' for production

# Redis Configuration
# Cache is handled by PostgreSQL (no Redis required)
CACHE_DEFAULT_TTL=5m

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080

# Python API Configuration
PYTHON_API_HOST=0.0.0.0
PYTHON_API_PORT=8082
PYTHON_API_WORKERS=4

# AI Ingestion Configuration
# OpenAI API Key for Vision API (GPT-4 Vision)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional AI Providers
# Google Document AI - https://console.cloud.google.com
GOOGLE_CLOUD_API_KEY=
GOOGLE_CLOUD_PROJECT_ID=

# Azure Form Recognizer - https://portal.azure.com
AZURE_FORM_RECOGNIZER_KEY=
AZURE_FORM_RECOGNIZER_ENDPOINT=

# Polycam API for LiDAR - https://polycam.ai/developers
POLYCAM_API_KEY=

# Monitoring Configuration
GRAFANA_PASSWORD=admin

# File Upload Limits
MAX_UPLOAD_SIZE=100MB
UPLOAD_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=20

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1
SSL_ENABLED=false

# Feature Flags
ENABLE_AI_INGESTION=true
ENABLE_MANUAL_FALLBACK=false
ENABLE_PDF_INGESTION=true
ENABLE_IFC_INGESTION=true
ENABLE_PHOTO_INGESTION=true
ENABLE_LIDAR_INGESTION=false
ENABLE_REALTIME_UPDATES=true
ENABLE_CACHING=true