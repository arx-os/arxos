# Arxos Backend Environment Variables
# Copy this file to .env and fill in your values
# These override values in server.yaml

# Environment
ENV=development
NODE_ENV=development

# Server
PORT=8080
HOST=0.0.0.0

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=arxos
DB_PASSWORD=arxos_dev
DB_NAME=arxos

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS/S3 Storage
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=arxos-storage

# Authentication
JWT_SECRET=change-me-in-production-to-a-long-random-string
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me
ADMIN_EMAIL=admin@arxos.io

# AI Service
OPENAI_API_KEY=
AI_SERVICE_URL=http://localhost:8000

# OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Monitoring
ALERT_WEBHOOK_URL=
SENTRY_DSN=

# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@arxos.io

# Cloudflare (for tunneling)
CLOUDFLARE_TUNNEL_TOKEN=
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=

# Feature Flags
ENABLE_LIDAR=true
ENABLE_AI=true
ENABLE_PUBLIC_SHARING=false

# Development
DEBUG=true
VERBOSE=false
MOCK_AI=false