# Arxos Core Environment Configuration
# Copy this file to .env and configure for your environment

# Environment
ENV=development
NODE_ENV=development

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arxos
DB_USER=arxos
DB_PASSWORD=arxos_dev
DATABASE_URL=postgresql://arxos:arxos_dev@localhost:5432/arxos?sslmode=disable

# Cache Configuration
# Cache is implemented using PostgreSQL (no Redis required)
CACHE_DEFAULT_TTL=5m
CACHE_CLEANUP_INTERVAL=1h
CACHE_KEY_PREFIX=arxos:

# Authentication
JWT_SECRET=change-me-in-production-to-a-long-random-string
ARXOS_ADMIN_USERNAME=admin
ARXOS_ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@arxos.io

# AI Service
AI_SERVICE_URL=http://localhost:8000
OPENAI_API_KEY=

# AWS S3 Storage (Optional)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=arxos-storage

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Feature Flags
ENABLE_AI=true
ENABLE_CACHE=true
ENABLE_METRICS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100

# File Upload
MAX_UPLOAD_SIZE=52428800
UPLOAD_DIR=./uploads

# Session
SESSION_SECRET=another-secret-key
SESSION_NAME=arxos_session
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# Development
DEBUG=true
VERBOSE=true
MOCK_AI=false