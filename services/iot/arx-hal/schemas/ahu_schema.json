{
  "$schema": "https://arxos.dev/specs/arxhal.schema.json",
  "object_type": "ahu",
  "version": "1.0.0",
  "description": "Air Handling Unit (AHU) hardware abstraction layer schema",
  "inputs": {
    "temp_sensor": {
      "unit": "°C",
      "type": "float",
      "description": "Temperature sensor reading",
      "range": [-40, 80],
      "accuracy": "±0.5°C"
    },
    "co2_sensor": {
      "unit": "ppm",
      "type": "int",
      "description": "Carbon dioxide sensor reading",
      "range": [0, 5000],
      "accuracy": "±50ppm"
    },
    "humidity_sensor": {
      "unit": "%",
      "type": "float",
      "description": "Relative humidity sensor reading",
      "range": [0, 100],
      "accuracy": "±2%"
    },
    "pressure_sensor": {
      "unit": "Pa",
      "type": "float",
      "description": "Static pressure sensor reading",
      "range": [-1000, 1000],
      "accuracy": "±10Pa"
    },
    "airflow_sensor": {
      "unit": "m³/h",
      "type": "float",
      "description": "Airflow rate sensor reading",
      "range": [0, 10000],
      "accuracy": "±5%"
    }
  },
  "outputs": {
    "fan_relay": {
      "type": "boolean",
      "description": "Fan on/off control",
      "default": false
    },
    "damper_position": {
      "unit": "%",
      "type": "float",
      "description": "Damper position control (0-100%)",
      "range": [0, 100],
      "default": 0
    },
    "heating_valve": {
      "unit": "%",
      "type": "float",
      "description": "Heating valve position (0-100%)",
      "range": [0, 100],
      "default": 0
    },
    "cooling_valve": {
      "unit": "%",
      "type": "float",
      "description": "Cooling valve position (0-100%)",
      "range": [0, 100],
      "default": 0
    },
    "fan_speed": {
      "unit": "%",
      "type": "float",
      "description": "Fan speed control (0-100%)",
      "range": [0, 100],
      "default": 0
    }
  },
  "behavior_profile": "ahu_standard_v1",
  "alarms": {
    "high_temp": {
      "description": "High temperature alarm",
      "threshold": 30,
      "unit": "°C",
      "severity": "warning"
    },
    "low_temp": {
      "description": "Low temperature alarm",
      "threshold": 10,
      "unit": "°C",
      "severity": "warning"
    },
    "high_co2": {
      "description": "High CO2 concentration alarm",
      "threshold": 1000,
      "unit": "ppm",
      "severity": "critical"
    },
    "fan_failure": {
      "description": "Fan failure alarm",
      "type": "boolean",
      "severity": "critical"
    }
  },
  "metadata": {
    "manufacturer": "vendor_agnostic",
    "model": "standard_ahu",
    "category": "hvac",
    "subcategory": "air_handling",
    "tags": ["hvac", "ahu", "air_handling", "building_automation"]
  }
} 