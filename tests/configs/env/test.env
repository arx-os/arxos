# Test Environment Configuration

# Database
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5433
DB_NAME=arxos_test
DB_USER=arxos_test
DB_PASSWORD=arxos_test
DB_SSL_MODE=disable
DATABASE_URL=postgresql://arxos_test:arxos_test@localhost:5433/arxos_test?sslmode=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# Server
PORT=8081
ENV=test
LOG_LEVEL=debug

# AI Service
AI_SERVICE_URL=http://localhost:8001
AI_SERVICE_MOCK=true

# Auth
JWT_SECRET=test-secret-key-not-for-production
ADMIN_PASSWORD=test-admin-password

# Testing
TEST_TIMEOUT=30s
TEST_PARALLEL=true
TEST_VERBOSE=true

# Coverage
COVERAGE_THRESHOLD=80
COVERAGE_DIR=./reports/coverage

# Performance
LOAD_TEST_DURATION=60s
LOAD_TEST_VUS=10
PERFORMANCE_BASELINE=./reports/performance/baseline.json