# ArxOS Configuration
# Copy this file to .env and update with your values

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080
SERVER_ENV=development  # development, staging, production

# Database Configuration
DATABASE_URL=postgres://arxos:password@localhost:5432/arxos_db
# For SQLite:
# DATABASE_URL=sqlite://./data/arxos.db

# Security
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRY=24h
SESSION_TIMEOUT=72h
BCRYPT_COST=12

# API Rate Limiting
API_RATE_LIMIT=100  # requests per second
API_RATE_BURST=200

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_ADDRESS=noreply@arxos.io
SMTP_FROM_NAME=ArxOS Platform

# Storage Configuration
STORAGE_TYPE=local  # local, s3, azure
STORAGE_PATH=./storage

# S3 Configuration (if STORAGE_TYPE=s3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=arxos-storage

# Azure Storage Configuration (if STORAGE_TYPE=azure)
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER_NAME=arxos-storage

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30s

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json, text
LOG_OUTPUT=stdout  # stdout, file
LOG_FILE_PATH=./logs/arxos.log

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_MFA=false
ENABLE_WEBSOCKET=false

# External Services
GOOGLE_MAPS_API_KEY=
OPENWEATHER_API_KEY=

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Cache Configuration
CACHE_TYPE=memory  # memory, redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600  # seconds

# ArxOS Specific Settings
DEFAULT_ORGANIZATION_PLAN=free
MAX_FREE_PLAN_USERS=5
MAX_FREE_PLAN_BUILDINGS=2
ARXOS_ID_PREFIX=ARXOS