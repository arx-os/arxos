{
  "mcp_id": "en-1993-1-1",
  "name": "Eurocode 3: Design of Steel Structures - Part 1-1: General Rules and Rules for Buildings",
  "version": "2021",
  "jurisdiction": {
    "country": "EU",
    "region": "European Union",
    "authority": "CEN",
    "effective_date": "2021-01-01"
  },
  "description": "Eurocode 3 Part 1-1 provides general rules for the design of steel structures including materials, structural analysis, and design of structural members.",
  "rules": [
    {
      "rule_id": "EN1993-1-1-3.1.1",
      "name": "Steel Material Properties",
      "description": "Structural steel shall have specified yield strength and ductility",
      "category": "structural_materials",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "steel_element",
          "property": "steel_grade",
          "operator": "in",
          "value": ["S235", "S275", "S355", "S420", "S460", "S500", "S550", "S620", "S690", "S890", "S960"]
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Steel grade must be specified according to EN 1993-1-1-3.1.1",
          "severity": "error",
          "code_reference": "EN 1993-1-1-3.1.1"
        }
      ]
    },
    {
      "rule_id": "EN1993-1-1-3.2.1",
      "name": "Steel Yield Strength",
      "description": "Steel shall have minimum yield strength for structural use",
      "category": "structural_materials",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "steel_element",
          "property": "yield_strength",
          "operator": ">=",
          "value": 235
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Steel must have minimum yield strength of 235 MPa per EN 1993-1-1-3.2.1",
          "severity": "error",
          "code_reference": "EN 1993-1-1-3.2.1"
        }
      ]
    },
    {
      "rule_id": "EN1993-1-1-4.1.1",
      "name": "Structural Analysis - Linear Elastic",
      "description": "Linear elastic analysis may be used for ULS and SLS",
      "category": "structural_analysis",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "structural_element",
          "property": "analysis_method",
          "operator": "in",
          "value": ["linear_elastic", "non_linear", "plastic"]
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Structural analysis method must be specified per EN 1993-1-1-4.1.1",
          "severity": "error",
          "code_reference": "EN 1993-1-1-4.1.1"
        }
      ]
    },
    {
      "rule_id": "EN1993-1-1-5.1.1",
      "name": "Ultimate Limit States - Tension",
      "description": "Steel members shall be verified for tension resistance",
      "category": "structural_safety",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "steel_element",
          "property": "tension_verification",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Steel elements must be verified for tension per EN 1993-1-1-5.1.1",
          "severity": "error",
          "code_reference": "EN 1993-1-1-5.1.1"
        }
      ]
    },
    {
      "rule_id": "EN1993-1-1-5.2.1",
      "name": "Ultimate Limit States - Compression",
      "description": "Steel members shall be verified for compression resistance",
      "category": "structural_safety",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "steel_element",
          "property": "compression_verification",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Steel elements must be verified for compression per EN 1993-1-1-5.2.1",
          "severity": "error",
          "code_reference": "EN 1993-1-1-5.2.1"
        }
      ]
    },
    {
      "rule_id": "EN1993-1-1-5.3.1",
      "name": "Ultimate Limit States - Bending",
      "description": "Steel members shall be verified for bending resistance",
      "category": "structural_safety",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "steel_element",
          "property": "bending_verification",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Steel elements must be verified for bending per EN 1993-1-1-5.3.1",
          "severity": "error",
          "code_reference": "EN 1993-1-1-5.3.1"
        }
      ]
    },
    {
      "rule_id": "EN1993-1-1-5.4.1",
      "name": "Ultimate Limit States - Shear",
      "description": "Steel members shall be verified for shear resistance",
      "category": "structural_safety",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "steel_element",
          "property": "shear_verification",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Steel elements must be verified for shear per EN 1993-1-1-5.4.1",
          "severity": "error",
          "code_reference": "EN 1993-1-1-5.4.1"
        }
      ]
    },
    {
      "rule_id": "EN1993-1-1-6.1.1",
      "name": "Serviceability Limit States - Deflection",
      "description": "Deflection limits shall be checked for serviceability",
      "category": "serviceability",
      "severity": "warning",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "steel_element",
          "property": "deflection_checked",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Deflection limits should be checked for serviceability per EN 1993-1-1-6.1.1",
          "severity": "warning",
          "code_reference": "EN 1993-1-1-6.1.1"
        }
      ]
    },
    {
      "rule_id": "EN1993-1-1-7.1.1",
      "name": "Detailing - Minimum Thickness",
      "description": "Steel members shall have minimum thickness for durability",
      "category": "structural_materials",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "steel_element",
          "property": "minimum_thickness",
          "operator": ">=",
          "value": 3
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Steel elements must have minimum thickness of 3mm per EN 1993-1-1-7.1.1",
          "severity": "error",
          "code_reference": "EN 1993-1-1-7.1.1"
        }
      ]
    },
    {
      "rule_id": "EN1993-1-1-8.1.1",
      "name": "Detailing - Welded Connections",
      "description": "Welded connections shall be designed according to standards",
      "category": "structural_materials",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "steel_connection",
          "property": "connection_type",
          "operator": "in",
          "value": ["welded", "bolted", "riveted"]
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Steel connections must be properly designed per EN 1993-1-1-8.1.1",
          "severity": "error",
          "code_reference": "EN 1993-1-1-8.1.1"
        }
      ]
    },
    {
      "rule_id": "EN1993-1-1-9.1.1",
      "name": "Detailing - Bolted Connections",
      "description": "Bolted connections shall use appropriate bolt grades",
      "category": "structural_materials",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "steel_connection",
          "property": "bolt_grade",
          "operator": "in",
          "value": ["4.6", "5.6", "6.8", "8.8", "10.9", "12.9"]
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Bolted connections must use appropriate bolt grades per EN 1993-1-1-9.1.1",
          "severity": "error",
          "code_reference": "EN 1993-1-1-9.1.1"
        }
      ]
    }
  ]
} 