# GUS Agent Environment Configuration

# Service Configuration
GUS_NAME=General User Support
GUS_VERSION=1.0.0
GUS_ENVIRONMENT=development
GUS_LOG_LEVEL=INFO

# Database Configuration
GUS_DB_URL=postgresql://arxos_user:arxos_password@postgres:5432/arxos
GUS_DB_POOL_SIZE=10
GUS_DB_MAX_OVERFLOW=20

# Redis Configuration
GUS_REDIS_URL=redis://redis:6379
GUS_REDIS_DB=0
GUS_REDIS_PASSWORD=

# AI Models Configuration
GUS_NLP_MODEL=gpt-4
GUS_EMBEDDING_MODEL=text-embedding-ada-002
GUS_REASONING_MODEL=claude-3-sonnet
GUS_OPENAI_API_KEY=your_openai_api_key_here
GUS_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Vector Store Configuration
GUS_VECTOR_STORE_TYPE=chroma
GUS_VECTOR_STORE_PATH=/app/data/vector_store
GUS_EMBEDDING_DIMENSION=1536

# Knowledge Base Configuration
GUS_KNOWLEDGE_BASE_PATH=/app/data/knowledge
GUS_BUILDING_CODES_PATH=/app/data/knowledge/building_codes
GUS_ENGINEERING_STANDARDS_PATH=/app/data/knowledge/standards
GUS_ARXOS_DOCUMENTATION_PATH=/app/data/knowledge/arxos

# API Configuration
GUS_API_HOST=0.0.0.0
GUS_API_PORT=9001
GUS_API_WORKERS=4
GUS_API_TIMEOUT=30

# Integration Configuration
GUS_BROWSER_CAD_URL=http://cad:3000
GUS_ARXIDE_URL=http://arxide:8080
GUS_BACKEND_URL=http://backend:4000
GUS_CLI_URL=http://localhost:4000

# Performance Configuration
GUS_MAX_CONCURRENT_REQUESTS=100
GUS_REQUEST_TIMEOUT=30
GUS_CACHE_TTL=3600
GUS_SESSION_TTL=1800

# Monitoring Configuration
GUS_METRICS_ENABLED=true
GUS_METRICS_PORT=9090
GUS_HEALTH_CHECK_INTERVAL=30

# Development Configuration
GUS_DEBUG_MODE=true
GUS_HOT_RELOAD=true
GUS_DEV_MODE=true
