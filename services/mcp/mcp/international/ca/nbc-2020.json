{
  "mcp_id": "nbc-2020",
  "name": "Canadian National Building Code 2020",
  "description": "National Building Code of Canada 2020 - Comprehensive building code for Canada",
  "jurisdiction": {
    "country": "CA",
    "province": null,
    "city": null
  },
  "version": "2020",
  "effective_date": "2020-01-01",
  "rules": [
    {
      "rule_id": "nbc_3_1_1_1",
      "name": "Occupancy Classification",
      "description": "Buildings shall be classified according to occupancy",
      "category": "building_classification",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "building",
          "property": "occupancy_class",
          "operator": "in",
          "value": ["A1", "A2", "A3", "A4", "B1", "B2", "B3", "C1", "C2", "C3", "D1", "D2", "D3", "E", "F1", "F2", "F3"]
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Building must have valid occupancy classification per NBC 3.1.1.1",
          "severity": "error",
          "code_reference": "NBC 3.1.1.1"
        }
      ]
    },
    {
      "rule_id": "nbc_3_2_1_1",
      "name": "Construction Types",
      "description": "Buildings shall be classified according to construction type",
      "category": "building_classification",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "building",
          "property": "construction_type",
          "operator": "in",
          "value": ["A", "B", "C", "D", "E", "F"]
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Building must have valid construction type per NBC 3.2.1.1",
          "severity": "error",
          "code_reference": "NBC 3.2.1.1"
        }
      ]
    },
    {
      "rule_id": "nbc_4_1_1_1",
      "name": "Structural Loads - Dead Loads",
      "description": "Dead loads shall be considered in structural design",
      "category": "structural_loads",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "structural_element",
          "property": "dead_load_calculated",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Dead loads must be calculated and considered per NBC 4.1.1.1",
          "severity": "error",
          "code_reference": "NBC 4.1.1.1"
        }
      ]
    },
    {
      "rule_id": "nbc_4_1_1_2",
      "name": "Structural Loads - Live Loads",
      "description": "Live loads shall be determined according to use",
      "category": "structural_loads",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "floor",
          "property": "live_load",
          "operator": ">=",
          "value": 2.4
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Minimum live load of 2.4 kPa must be considered per NBC 4.1.1.2",
          "severity": "error",
          "code_reference": "NBC 4.1.1.2"
        }
      ]
    },
    {
      "rule_id": "nbc_4_1_1_3",
      "name": "Structural Loads - Snow Loads",
      "description": "Snow loads shall be determined for Canadian locations",
      "category": "structural_loads",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "roof",
          "property": "snow_load_calculated",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Snow loads must be calculated for Canadian locations per NBC 4.1.1.3",
          "severity": "error",
          "code_reference": "NBC 4.1.1.3"
        }
      ]
    },
    {
      "rule_id": "nbc_4_1_1_4",
      "name": "Structural Loads - Wind Loads",
      "description": "Wind loads shall be determined for Canadian locations",
      "category": "structural_loads",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "building",
          "property": "wind_load_calculated",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Wind loads must be calculated for Canadian locations per NBC 4.1.1.4",
          "severity": "error",
          "code_reference": "NBC 4.1.1.4"
        }
      ]
    },
    {
      "rule_id": "nbc_4_1_1_5",
      "name": "Structural Loads - Earthquake Loads",
      "description": "Earthquake loads shall be determined for Canadian locations",
      "category": "structural_loads",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "building",
          "property": "seismic_zone",
          "operator": "!=",
          "value": "none"
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Earthquake loads must be considered for buildings in seismic zones per NBC 4.1.1.5",
          "severity": "error",
          "code_reference": "NBC 4.1.1.5"
        }
      ]
    },
    {
      "rule_id": "nbc_5_1_1_1",
      "name": "Means of Egress - General",
      "description": "Every building shall have means of egress",
      "category": "fire_safety_egress",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "room",
          "property": "means_of_egress",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Every room must have means of egress per NBC 5.1.1.1",
          "severity": "error",
          "code_reference": "NBC 5.1.1.1"
        }
      ]
    },
    {
      "rule_id": "nbc_5_1_1_2",
      "name": "Means of Egress - Exit Width",
      "description": "Exit width shall be adequate for occupant load",
      "category": "fire_safety_egress",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "exit",
          "property": "width",
          "operator": ">=",
          "value": 0.8
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Exit width must be minimum 800mm per NBC 5.1.1.2",
          "severity": "error",
          "code_reference": "NBC 5.1.1.2"
        }
      ]
    },
    {
      "rule_id": "nbc_6_1_1_1",
      "name": "Fire Protection - Fire Separations",
      "description": "Fire separations shall be provided where required",
      "category": "fire_safety_resistance",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "fire_separation",
          "property": "fire_resistance_rating",
          "operator": ">=",
          "value": 45
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Fire separations must have adequate fire resistance rating per NBC 6.1.1.1",
          "severity": "error",
          "code_reference": "NBC 6.1.1.1"
        }
      ]
    },
    {
      "rule_id": "nbc_7_1_1_1",
      "name": "Plumbing - Water Supply",
      "description": "Potable water supply shall be provided",
      "category": "plumbing_water_supply",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "plumbing_fixture",
          "property": "water_supply_provided",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Potable water supply must be provided to all fixtures per NBC 7.1.1.1",
          "severity": "error",
          "code_reference": "NBC 7.1.1.1"
        }
      ]
    },
    {
      "rule_id": "nbc_8_1_1_1",
      "name": "Electrical - General",
      "description": "Electrical installations shall comply with Canadian Electrical Code",
      "category": "electrical_safety",
      "severity": "error",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "electrical_installation",
          "property": "cec_compliant",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Electrical installations must comply with Canadian Electrical Code per NBC 8.1.1.1",
          "severity": "error",
          "code_reference": "NBC 8.1.1.1"
        }
      ]
    },
    {
      "rule_id": "nbc_9_1_1_1",
      "name": "Energy Efficiency - General",
      "description": "Buildings shall meet energy efficiency requirements",
      "category": "energy_efficiency",
      "severity": "warning",
      "enabled": true,
      "conditions": [
        {
          "type": "property",
          "element_type": "building",
          "property": "energy_efficiency_verified",
          "operator": "==",
          "value": true
        }
      ],
      "actions": [
        {
          "type": "validation",
          "message": "Energy efficiency requirements must be met per NBC 9.1.1.1",
          "severity": "warning",
          "code_reference": "NBC 9.1.1.1"
        }
      ]
    }
  ]
} 